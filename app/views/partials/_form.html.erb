<div class="form-group">
  <%= form_with model: @item do |form| %>
    <%= form.label :title, class: "neonText" %>
    <%= form.text_field :title, class: "form-control" %>
    <br>
    <%= form.label :description, class: "neonText" %>
    <%= form.text_field :description, class: "form-control" %>
    <br>
    <%= form.label :limbs, class: "neonText" %>
    <% for option in @limbs %>
      <div>
        <%= form.radio_button :limb_id, option.id %>
        <%= form.label :limb_id, option.title, class: "neonText" %>
      </div>
    <% end %>
    <br>
    <%= form.label :material_id, class: "neonText" %>
    <%= form.select(:material_id, @materials.map{ |m| [m.title, m.id]}, {}, { :class => "form-control"}) %>
    <br>
    <%= form.label :type_id, class: "neonText" %>
    <%= form.select(:type_id, @types.map{ |t| [t.title, t.id]}, {}, { :class => "form-control"}) %>
    <br>
    <%= form.label :price, class: "neonText" %>
    <%= form.number_field :price, min:0, class: "form-control" %>
    <br>
    <%= form.label :picture, class: "neonText" %>
    <%= form.file_field :picture, accept: "image/png, image/jpg, image/jpeg" %>
    <br>
    <br>
    <%= form.submit %>
  <% end %>
</div>



